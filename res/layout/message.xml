<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
	 android:padding="7dp"     
     android:layout_height="wrap_content" android:orientation="vertical">
     
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/frameLayout1">
        <TextView android:textColor="#444" 
        		  android:text="0788383383" 
        		  android:textSize="16sp" 
        		  android:textStyle="bold" 
        		  android:layout_height="wrap_content"
        		  android:layout_weight="1" 
        		  android:id="@+id/messageNumber" android:layout_width="wrap_content" android:layout_gravity="fill_horizontal"></TextView>
        <TextView android:textColor="#AAFF00" 
        		  android:text="Sent" 
        		  android:layout_width="wrap_content" 
        		  android:textSize="16sp" 
        		  android:textStyle="bold" 
        		  android:layout_height="wrap_content" 
        		  android:id="@+id/messageStatus" android:layout_gravity="right" android:layout_marginRight="5dip"></TextView>        		      
    </LinearLayout>

    <TextView android:id="@+id/messageText"
    		  android:text="Hi Nicolas,\nHere's your message."
	          android:textSize="16sp"
		      android:textColor="#444"         
        	  android:layout_width="match_parent"
         	  android:layout_height="wrap_content"/>
         	  
    <TextView android:text="" android:textColor="#550" android:textStyle="italic" android:layout_height="wrap_content" android:id="@+id/log" android:layout_width="match_parent"></TextView>
    
    <TextView android:textSize="12sp" android:text="Friday, June 10th, 2001" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right" 
    android:id="@+id/messageDate"></TextView>
</LinearLayout>